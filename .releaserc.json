{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "beta"
    }
  ],
  "parserOpts": {
    "noteKeywords": [
      "BREAKING CHANGE",
      "BREAKING CHANGES",
      "BREAKING"
    ]
  },
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ],
  "preset": "angular",
  "releaseRules": [
    {
      "release": "minor",
      "type": "feat"
    },
    {
      "release": "patch",
      "type": "fix"
    },
    {
      "release": "patch",
      "type": "docs"
    },
    {
      "release": "patch",
      "type": "style"
    },
    {
      "release": "patch",
      "type": "refactor"
    },
    {
      "release": "patch",
      "type": "perf"
    },
    {
      "release": "patch",
      "type": "test"
    },
    {
      "release": "patch",
      "type": "build"
    },
    {
      "release": "patch",
      "type": "ci"
    },
    {
      "release": "patch",
      "type": "chore"
    },
    {
      "release": "patch",
      "type": "revert"
    },
    {
      "breaking": true,
      "release": "major"
    }
  ]
}
